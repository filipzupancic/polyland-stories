  "devDependencies": {
    "@types/react": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "babel-jest": "^27.0.2",
    "eslint": "^7.19.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.19.0",
